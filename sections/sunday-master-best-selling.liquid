{{ 'sunday-master-featured-product.css' | asset_url | stylesheet_tag }}
<script src="{{ 'sunday-master-featured-product.js' | asset_url }}" defer="defer"></script>

<section class="featured-product-area">
  <div class="title-area">
    <h2>{{ section.settings.section_heading | upcase }}</h2>
  </div>

  <div class="featured-product-slider">
    {% for product in section.settings.product_list limit: section.settings.product_limit %}
      {% assign product_subtitle = product.metafields.descriptors.subtitle %}

      <div class="item">
        <a class="product-image-area" href="{{ product.url }}">
          <img
            src="{{ product.featured_image.src | image_url: width: 1024 }}"
            data-lazy="{{ product.featured_image.src | image_url: width: 1024 }}"
            width="200"
            height="200"
            alt="{{ product.title }}"
            loading="lazy"
          >
          {% if section.settings.product_tag != blank %}
            <div class="product-tag-area">
              <h3>{{ section.settings.product_tag }}</h3>
            </div>
          {% endif %}
        </a>
        <div class="group-content-area">
          <div class="product-title-area">
            <a href="{{ product.url }}">{{ product_subtitle | default: product.title }}</a>
          </div>
          <div class="product-description-area">
            <p>
              {{
                product.metafields.custom.product_short_description
                | metafield_tag
                | newline_to_br
                | default: product.description
              }}
            </p>
          </div>
          <div class="button-area">
            <a class="sd-button-primary" href="{{ product.url }}">{{ section.settings.button_content }}</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.sunday-master-best-selling.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "default": "Sản phẩm bán chạy",
      "label": "t:sections.sunday-master-best-selling.settings.section_heading.label"
    },

    {
      "type": "product_list",
      "id": "product_list",
      "label": "t:sections.sunday-master-best-selling.settings.product_list.label",
      "limit": 12
    },
    {
      "type": "range",
      "id": "product_limit",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "EA",
      "label": "t:sections.sunday-master-best-selling.settings.product_limit.label",
      "default": 4
    },
    {
      "type": "text",
      "id": "product_tag",
      "default": "Mới",
      "label": "t:sections.sunday-master-best-selling.settings.product_tag.label"
    },
    {
      "type": "text",
      "id": "button_content",
      "default": "Xem thêm",
      "label": "t:sections.sunday-master-best-selling.settings.button_content.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.sunday-master-best-selling.presets.name"
    }
  ]
}
{% endschema %}
