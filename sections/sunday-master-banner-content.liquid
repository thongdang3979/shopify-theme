{{ 'sunday-master-banner-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  @media (min-width: 200px) {
     .background-content-area {
       {% if section.settings.banner_mobile != null %}
         background-image: url('{{- section.settings.banner_mobile -}}');
       {% else %}
         background-image: url('{{- section.settings.banner_mobile_default -}}');
       {% endif %}

      {% if section.settings.banner_mobile_height != null %}
        height: {{ section.settings.banner_mobile_height }}px;
      {% endif %}

      {% if section.settings.button_gap != null %}
        gap: {{ section.settings.button_gap }}px;
      {% endif %}


      .group-content-area{
        {% unless section.settings.heading_title_mobile_show %}
          .title-area.title-mobile{
            display: none;
          }
        {% endunless %}

        {% unless section.settings.heading_content_mobile_show %}
          .content-area.content-mobile{
            display: none;
          }
        {% endunless %}
      }

      {% if section.settings.button_from_bottom %}
        .button-area{
          position: absolute;
          bottom: {{ section.settings.button_gap }}px;
        }
      {% endif %}
     }
   }

  @media (min-width: 1025px) {
    .background-content-area {
      {% if section.settings.banner_desktop != null %}
        background-image: url('{{- section.settings.banner_desktop -}}');
      {% else %}
        background-image: url('{{- section.settings.banner_desktop_default -}}');
      {% endif %}

      {% if section.settings.banner_desktop_height != null %}
        height: {{ section.settings.banner_desktop_height }}px;
      {% endif %}

      .group-content-area{
        {% unless section.settings.heading_title_desktop_show %}
          .title-area.title-desktop{
            display: none;
          }
        {% endunless %}

        {% unless section.settings.heading_content_desktop_show %}
          .content-area.content-desktop{
            display: none;
          }
        {% endunless %}
      }
    }
  }
{%- endstyle -%}

<section class="background-content-area {{ template.suffix }}">
  {% if section.settings.heading_h1_show %}
    <h1>{{ section.settings.heading_title_desktop | strip_html }}</h1>
  {% endif %}
  <div class="group-content-area">
    {% if section.settings.heading_title_desktop != blank %}
      <div class="title-area title-desktop">
        {{ section.settings.heading_title_desktop }}
      </div>
    {% endif %}

    {% if section.settings.heading_title_mobile != blank %}
      <div class="title-area title-mobile">
        {{ section.settings.heading_title_mobile }}
      </div>
    {% endif %}

    {% if section.settings.heading_content_desktop != blank %}
      <div class="content-area content-desktop">
        {{ section.settings.heading_content_desktop }}
      </div>
    {% endif %}

    {% if section.settings.heading_content_mobile != blank %}
      <div class="content-area content-mobile">
        {{ section.settings.heading_content_mobile }}
      </div>
    {% endif %}
  </div>

  {% if section.settings.button_content != blank %}
    <div class="button-area">
      <a
        href="{% if section.settings.button_link != blank %}{{ section.settings.button_link }}{% elsif section.settings.button_link_default != blank %}{% if request.locale.iso_code != 'vi' %}/{{ request.locale.iso_code }}{% endif %}{{ section.settings.button_link_default }}{% endif %}"
        class="sd-button-third"
      >
        {{ section.settings.button_content }}
      </a>
    </div>
  {% endif %}
</section>

