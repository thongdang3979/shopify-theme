{% for group in robots.default_groups %}
  {{- group.user_agent -}}

  {% for rule in group.rules %}
    {{- rule -}}
  {% endfor %}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /collections/all*' }}
    {{ 'Disallow: /collections/vendors*?*q=*' }}
    {{ 'Disallow: /*?q=*' }}
    {{ 'Disallow: /*?filter*' }}
    {{ 'Disallow: /*/sandbox/*' }}
    {{ 'Disallow: /*.atom' }}
    {{ 'Disallow: /*.oembed' }}
  {%- endif -%}

  {%- if group.sitemap != blank -%}
    {{ group.sitemap }}
  {%- endif -%}
{% endfor %}
